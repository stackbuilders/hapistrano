name:                hapistrano
version:             0.2.1.2
synopsis:            A deployment library for Haskell applications
description:
  .
  Hapistrano makes it easy to reliably deploy Haskell applications
  to a server.
  .
  Following popular libraries like Ruby's <http://capistranorb.com/
  Capistrano>, Hapistrano does the work of building the application
  with dependencies into a distinct folder, and then atomically moves
  a symlink to the latest complete build.
  .
  This allows for atomic switchovers to new application code after the
  build is complete. Rollback is even simpler, since Hapistrano can
  just point the `current` symlink to the previous release.
  .
  See <https://github.com/stackbuilders/hapistrano the project readme on GitHub>
  for more information.
  .
license:             MIT
license-file:        LICENSE
author:              Justin Leitgeb
maintainer:          justin@stackbuilders.com
copyright:           2015 Stack Builders Inc.
category:            System
homepage:            https://github.com/stackbuilders/hapistrano
bug-reports:         https://github.com/stackbuilders/hapistrano/issues
build-type:          Simple
cabal-version:       >=1.10
extra-source-files:  changes.md README.md

library
  hs-source-dirs:      src
  exposed-modules:     Hapistrano
                     , System.Hapistrano
                     , Hapistrano.Deploy
                     , Hapistrano.Types
  other-modules:       Hapistrano.Current
                     , Hapistrano.Lock
                     , Hapistrano.Paths
                     , Hapistrano.Releases
                     , Hapistrano.Repo
                     , Hapistrano.Shared
                     , System.Hapistrano.Types
  build-depends:       base >= 4.5 && < 4.10
                     , aeson
                     , data-default
                     , directory
                     , either
                     , filepath
                     , mtl
                     , process
                     , shake
                     , text
                     , time
                     , time-locale-compat
                     , transformers
                     , url
  ghc-options:         -Wall
  default-language:    Haskell2010

executable hap
  hs-source-dirs:      app
  main-is:             Main.hs
  build-depends:       base
                     , hapistrano
                     , base-compat
  ghc-options:         -Wall -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

executable new-hap
  hs-source-dirs:      app
  main-is:             Hap/Main.hs
  build-depends:       base
                     , aeson
                     , bytestring
                     , hapistrano
                     , optparse-applicative
  ghc-options:         -Wall -threaded
  default-language:    Haskell2010
  other-modules:       Hap.Options
                     , Hap.Actions
                     , Hap.Shared.Utils

executable hap-shim
  hs-source-dirs:      app
  main-is:             Hap/Shim/Main.hs
  build-depends:       base
                     , hapistrano
                     , optparse-applicative
  ghc-options:         -Wall -threaded
  default-language:    Haskell2010
  other-modules:       Hap.Shim.Options
                     , Hap.Shim.Actions
                     , Hap.Shared.Utils


test-suite hapistrano-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      spec
  main-is:             Spec.hs
  other-modules:       System.HapistranoSpec
  build-depends:       base
                     , hapistrano
                     , directory
                     , either
                     , filepath
                     , hspec
                     , mtl
                     , process
                     , temporary
  ghc-options:         -Wall -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

test-suite tests
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  other-modules:       HapistranoSpec
  build-depends:       base
                     , data-default
                     , directory
                     , hapistrano
                     , hspec
                     , shake
                     , temporary
                     , url
  ghc-options:         -Wall -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/stackbuilders/hapistrano
